{
    "swagger": "2.0",
    "info": {
        "version": "0.0.3",
        "title": "c-Lightning-REST",
        "description": "A REST API suite for c-lightning"
    },
    "schemes": [
        "https",
        "http"
    ],
    "host": "localhost",
    "basePath": "/v1",
    "paths": {
        "/channel/listChannels": {
            "get": {
                "summary": "List Channels",
                "description": "Returns a list of channels.",
                "responses": {
                    "200": {
                        "description": "A list of channels",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "connected": {
                                        "type": "string"
                                    },
                                    "state": {
                                        "type": "string"
                                    },
                                    "short_channel_id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}